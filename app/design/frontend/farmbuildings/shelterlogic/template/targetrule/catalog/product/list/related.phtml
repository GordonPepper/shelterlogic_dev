<?php
    $_helper = $this->helper('catalog/output');
    $_bvHelper = $this->helper('bazaarvoice');
?>
<?php $_maxItems = 12; $_count = 0; ?>
<?php if ($this->hasItems()):?>
    <div class="product-related-accessories">
        <h2><span>Related Accessories</span></h2>
        <div class="category-products">
            <ul class="products-grid multiple-items">
                <?php foreach($this->getItemCollection() as $_product): ?>
                    <?php if (++$_count > $_maxItems) break; ?>
                    <?php /** @var Mage_Catalog_Model_Product $_product */ ?>
                    <li class="item">
                        <?php if ($_product->getTypeId() == 'configurable'): ?>
                            <a class='' href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_product->getName()) ?>">
                        <?php else: ?>
                        <?php if($_product->getMinimalPrice() > 0) {
                            $onSaleCSS = $_product->getMinimalPrice() < $_product->getPrice() ? 'onsale' : '';
                        }
                        ?>
                            <a class="<?php echo $onSaleCSS; ?>" href="<?php echo $_product->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_product->getName()) ?>">
                        <?php endif; ?>
                        <?php $_imgSize = [240,180]; ?>
                            <div class="category-products-image"><img src="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize($_imgSize[0],$_imgSize[1]) ?>" alt="<?php echo $this->escapeHtml($_product->getName()) ?>" /></div>
                            <div class="product-info clearfix">
                                <div class="product-west">
                                    <?php if ($_product->getTypeId() == 'configurable'): ?>
                                        <span style="color: #a0a0a0; font-size: 10px; text-transform: uppercase; margin-bottom: 5px;"><i class="fa fa-gear"></i>&nbsp;Custom options</span>
                                    <?php else: ?>
                                        <span style="color: #a0a0a0; font-size: 10px; text-transform: uppercase; margin-bottom: 5px;">Model #<?php echo $_helper->productAttribute($_product, $_product->getSku(), 'SKU') ?></span>
                                    <?php endif; ?>
                                    <h3 class="product-name" style="margin-bottom: 5px;"><?php echo $this->escapeHtml($_product->getName()) ?></h3>
                                    <div id="BVRRInlineRating-<?php echo $_bvHelper->getProductId($_product) ?>"></div>
                                    <?php if($_product->getRatingSummary()): ?>
                                    <?php echo $this->getReviewsSummaryHtml($_product) ?>
                                    <?php endif; ?>
                                </div>
                                <div class="product-east">
                                    <?php echo $this->getPriceHtml($_product, true, '-related') ?>
                                    <button type="button" title="Add to Cart" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>'); return false;">
                                        <span><span>Add to Cart</span></span>
                                    </button>
                                </div>
                            </div>
                            <div class="fa wishlist-toggle" title="Add to Wishlist" id="wishlist-toggle-<?php echo $_product->getId() ?>" data-id="<?php echo $_product->getId() ?>" data-url="<?php echo Mage::helper('shelterlogic_wishlist')->getWishlistUrl($_product) ?>">
                                <span class="visuallyHidden">Wishlist: Add or Remove</span>
                            </div>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
<?php endif;?>
