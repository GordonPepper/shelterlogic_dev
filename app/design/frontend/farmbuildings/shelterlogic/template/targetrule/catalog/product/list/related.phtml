?>
<?php $_maxItems = 4; $_count = 0; ?>
<?php if ($this->hasItems()):?>
    <div class="product-related-accessories">
        <h2><span>Related Accessories</span></h2>
        <div class="category-products">
            <ul class="products-grid">
                <?php foreach($this->getItemCollection() as $_item): ?>
                    <?php if (++$_count > $_maxItems) break; ?>
                    <?php /** @var Mage_Catalog_Model_Product $_item */ ?>
                    <li class="item">
                        <a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>">
                            <div class="category-products-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'image')->resize(260) ?>" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></div>
                            <div class="product-info clearfix">
                                <div class="product-east">
                                    <?php echo $this->getPriceHtml($_item, true, '-related') ?>
                                    <button type="button" title="Add to Cart" class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>'); return false;">
                                        <span><span>Add to Cart</span></span>
                                    </button>
                                </div>
                                <div class="product-west">
                                    <h2 class="product-name"><?php echo $this->escapeHtml($_item->getName()) ?></h2>
                                    <div class="product-category"><?php echo Mage::helper('shelterlogic_templates')->getCategoryName($_item) ?></div>
                                </div>
                            </div>
                        </a>
                    </li>
                <?php endforeach; ?>
            </ul>
        </div>
    </div>
<?php endif;?>
